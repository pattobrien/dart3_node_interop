{
  "compilerOptions": {
    "checkJs": true,   // Enable type checking for JavaScript files
    "noEmit": true,    // Prevent output of compiled JavaScript files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "target": "es6",   // Set the JavaScript language version for type checking
    "module": "commonjs"
  },
  "include": [
    "./**/*.js"       // Include all JavaScript files in the project for type checking
  ]
}